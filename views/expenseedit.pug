extends index.pug

block content
  section.layout-width-sd.layout-col
    .section-hdg.section-hdg-1 Edit Expense
    .layout-row.layout-width-1-1
      .item-listing.layout-col.layout-width-1-1.layout-sd-width-5-8.layout-lg-width-5-8.layout-xl-width-4-8
        form(action="/expenses/" + expense.id + "/" method="post")
          - console.log(expense);
          input(id="id" type="hidden" name="id" value=expense.id)
          .inputexpenseamount.itemdetail.layout-col
            label.label(for="amount") Amount:
            input#amount(type="number" name="amount" min=0 step="0.01" value=expense.amount autofocus)
          .inputexpensecategory.itemdetail.layout-col
            label.label(for="cat") Category:
            input#cat(type="text" name="cat" list="categories" value=expense.categoryName)
            datalist#categories
              each category in categories
                - let selected = (category.id==expense.categoryId) ? "selected" : null;
                option(value=category.name selected=selected)
          .inputexpensedate.itemdetail.layout-col
            label.label(for="date") Date:
            input#date.datetimepicker(type="datetime-local" name="date" value=expense.date)
          .inputexpenseprovider.itemdetail.layout-col
            label.label(for="provider") Provider:
            input#provider(type="text" name="provider" value=expense.provider placeholder="to whom did you pay?")
          .inputexpensenote.itemdetail.layout-col
            label.label(for="note") Memo:
            textarea#note(cols="30" rows="5" name="note") #{expense.note}
          .expensesubmit.itemdetail.layout-col
            .label Actions:
            .data
              input#submit.btn.normal.buttonconfirm(type="submit" value="Confirm")
              a.btn.cancel.buttoncancel(href="/expenses/") Cancel
      .description.layout-col.layout-xs-hidden.layout-sm-hidden.layout-md-hidden.layout-sd-width-3-8.layout-lg-width-3-8.layout-xl-width-4-8
        .infotext.section-hdg.section-hdg-3 Edit Domain View
        .infotext You can edit a domain with this view.
        .infotext Modify the details for the domain.
        .infotext.section-hdg.section-hdg-3 Name
        .infotext Enter the user's email address here. This should be a valid email address
        .infotext.example.layout-col
          .infotext.heading Examples:
          .infotext tommy@test.com
        .infotext.important This is a required field.
